{% extends 'base.html.twig' %}

{% block body %}
    <h1>
        {{ podcast.title }}
    </h1>
    <div class="subscribe">
        <li class="link-list-item">
            <a href="/podcast" class="icon">
                <i class="fa fa-podcast fa-3" aria-hidden="true"></i>
            </a>
        </li>
        <li class="link-list-item">
            <a href="/rss" class="icon">
                <i class="fa fa-rss fa-3" aria-hidden="true"></i>
            </a>
        </li>
        <li class="link-list-item" class="icon">
            <a href="/twitter">
                <i class="fa fa-twitter fa-3" aria-hidden="true"></i>
            </a>
        </li>
        <li class="link-list-item">
            <a href="/facebook" class="icon">
                <i class="fa fa-facebook fa-3" aria-hidden="true"></i>
            </a>
        </li>
    </div>
    <div class="description">
        <p>{{ podcast.description }}</p>
    </div>

{% endblock %}
